package com.paic.pawj.common.util;

import java.io.IOException;
import java.io.InputStream;
import java.util.Properties;

public class ContextUtil {
	
	/**
	 * 取得图片服务器地址
	 * @return
	 */
	public static String getPicServer(){
		Properties props = new Properties();
		InputStream is = ContextUtil.class.getClassLoader().
				getResourceAsStream("context-pawj.properties");
		try{
			props.load(is);
		}catch(IOException e){
			e.printStackTrace();
		}finally{
			if(null!=is){
				try{
					is.close();
				}catch(IOException e){
					e.printStackTrace();
				}
			}
		}
		String picServer = props.getProperty("pawj.picUrl");
		return picServer;
	}

}
