package com.paic.pawj.partner.service.impl;

import java.util.HashMap;
import java.util.Map;

import javax.annotation.Resource;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;
import org.springframework.stereotype.Service;

import com.paic.pawj.partner.dao.LotteryPartnerMapper;
import com.paic.pawj.partner.dto.LotteryPartner;
import com.paic.pawj.partner.service.LotteryPartnerService;

		
@Service("lotteryPartnerService")
public class LotteryPartnerServiceImpl implements LotteryPartnerService {
	public static final Log LOG = LogFactory.getLog(LotteryPartnerServiceImpl.class);
	
	@Resource
	private LotteryPartnerMapper dao;
	
	@Override
	public Map<String, Object> queryLotteryPartner(LotteryPartner lotteryPartner) {
		Map<String, Object> resultMap = new HashMap<String, Object>();
		resultMap.put("rows", dao.queryLotteryPartnerList(lotteryPartner));
		resultMap.put("total", dao.queryLotteryPartnerCount(lotteryPartner));
		return resultMap;
	}

	@Override
	public void addLotteryPartner(LotteryPartner lotteryPartner) {
		try {
			dao.addLotteryPartner(lotteryPartner);
		} catch (Exception e) {
			LOG.debug("错误原因:", e);
		}
		
	}

	@Override
	public void updateLotteryPartner(LotteryPartner lotteryPartner) {
		try {
			dao.updateLotteryPartner(lotteryPartner);
		} catch (Exception e) {
			LOG.debug("错误原因", e);
		}
	}

	@Override
	public void deleteLotteryPartner(String userId) {
		try {
			dao.deleteLotteryPartner(userId);
		} catch (Exception e) {
			LOG.debug("错误原因:",e);
		}
	}

	@Override
	public boolean haveUserId(String userId) {
		int count = dao.haveUserId(userId);
		if(count>0){
			return true;
		}else{
			return false;
		}
	}

}
