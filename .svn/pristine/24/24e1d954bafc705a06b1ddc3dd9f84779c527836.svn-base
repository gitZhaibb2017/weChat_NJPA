<%@ page language="java" contentType="text/html; charset=utf-8"
	 pageEncoding="utf-8"%>
<!doctype html>
<html ng-app="questionDetail">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>调查内容</title>
<link href="../css/main.css" rel="stylesheet"
	media="screen and (max-width: 320px)" />
<link href="../css/main.css" rel="stylesheet"
	media="screen and (min-width: 321px) and (max-width: 640px)" />
<link href="../css/main.css" rel="stylesheet"
	media="screen and (min-width: 641px) and (max-width: 2560px)" />
<script type="text/javascript" src="/pawj/libs/easyui/jquery.min.js"></script>
<script type="text/javascript" src="/pawj/libs/angular.min.js"></script>
<script type="text/javascript" src="../js/quetionDetail.js"></script>
</head>

<body class="bgWhite" ng-controller="questionDetailCtrl">
	<input type="hidden" name="questionId" id="questionId"
		value=<%=request.getParameter("qsrId")%>>
	<header>
		<i></i><span>平安问答</span>
	</header>
	
	<div class="QAProgress">
		<span><label style="width: 60%;"></label></span><b>已答题 <i>09</i>/15
		</b>
	</div>	
	<div class="QAContent" ng-repeat="obj in questions">
		<h1>{{$index+1}}.{{obj.questionName}}</h1>
		<ul ng-if="obj.questionType == 'mc'">
			<li ng-repeat="option in obj.options"><input type="radio"
				name="option{{$parent.$index+1}}" value="{{option.optionCode}}" />{{option.optionCode}}.{{option.optName}}</li>
		</ul>
		<ul ng-if="obj.questionType == 'mcs'">
			<li ng-repeat="option in obj.options"><input type="checkbox"
				name="option{{$parent.$index+1}}" value="{{option.optionCode}}" />{{option.optionCode}}.{{option.optName}}</li>
		</ul>
		<ul ng-if="obj.questionType == 'scr'">
			<li ng-repeat="option in obj.options">
			<span ng-class="getStarCls()">
						</span>{{option.optName}}
			<div style="width:114px;height:20px;margin-left: -3px;margin-top: -20px;">
			<div style="width:20%;height:20px;float:left;position:relative;text-align:center" ng-click="show(1,option)"></div>
			<div style="width:20%;height:20px;float:left;position:relative;text-align:center" ng-click="show(2,option)"></div>
			<div style="width:20%;height:20px;float:left;position:relative;text-align:center" ng-click="show(3,option)"></div>
			<div style="width:20%;height:20px;float:left;position:relative;text-align:center" ng-click="show(4,option)"></div>
			<div style="width:20%;height:20px;float:left;position:relative;text-align:center" ng-click="show(5,option)"></div>
			
			</div>
			</li>
		</ul>
		<ul ng-if="obj.questionType == 'q'">
    	<li><textarea placeholder="内容不超过200字"></textarea></li>
		</ul>
	</div>


	<div class="QABtn">
		<button>提交</button>
	</div>
</body>
</html>
