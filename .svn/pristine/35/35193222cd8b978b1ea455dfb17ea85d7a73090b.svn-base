package com.paic.pawj.basic.grade.controller;

import java.util.Map;

import javax.servlet.http.HttpSession;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.paic.pawj.basic.grade.service.GradeService;
import com.paic.pawj.basic.interceptor.SessionUserInfo;
import com.paic.pawj.basic.user.dto.UserInfo;

@Controller
@RequestMapping("/app/")
public class GradeController {

	/**
	 * log
	 */
	private static final Log LOG = LogFactory.getLog(GradeController.class);
	
    @Autowired
    private GradeService gradeService;
    
    /**
     * 获得用户的等级
     * @param user
     * @return
     */
    @RequestMapping(value="grade/getUserGrade.do")
    @ResponseBody
    public Map<String, Object> getUserGrade(@ModelAttribute UserInfo fo, HttpSession session){
    	Map<String, Object> map = null;
		try {
			SessionUserInfo suser = (SessionUserInfo)session.getAttribute(SessionUserInfo.SESSION_ID);
			fo.setUserId(suser.getUserId());
			// 判断是否升级
			map = gradeService.getUserGrade(fo);
		} catch (Exception e) {
			LOG.info("错误原因：", e);
		}
		return map;
    }
    
}