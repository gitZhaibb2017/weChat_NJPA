$(function() {
	initAccount();
});
// 初始化基础方法
function initAccount() {
	getMessage();
}
//获取四大财富
function getMessage() {
	//获取个人财富
	getPersonTreasure();
	
}
//获取个人财富  userId    
function getPersonTreasure(){
	$.ajax({
		type : 'POST',
		url :"/pawj/app/person/queryUserInfo.do",
		dataType : "JSON",
		success : function(dat) {
			var data = $.parseJSON(dat);
			var balance =data.balance;//余额
			var score=data.score;//积分
			var gradeName=data.gradeName;//等级名称
			var level=data.level;//财富
			var nickName=data.nickName;//用户昵称
			var picturePath = data.picturePath;// 头像路径
			if(nickName == null || nickName=='undefined'){
				nickName="";
			}
			if(level == null || level=='undefined'){
				level=0;
			}
			if(balance == null || balance=='undefined'){
				balance=0;
			}
			if(score == null || score=='undefined'){
				score=0;
			}
			if(gradeName == null || gradeName=='undefined'){
				gradeName="Lv1";
			}
				$("#treasure").append(level);//财富
				$("#points").append(score);
				$("#balance").append(balance);
				$("#level").append(gradeName);//等级名称
				$("#gradeName").append(gradeName);//头像等级名称
				$("#nickName").append(nickName);//头像等级名称
				$("#avatar").attr('src',picturePath);
				
		}
	});
}
 
function onError(){
	$("#avatar").attr("src","../../images/icon_avatar.png");
}	  