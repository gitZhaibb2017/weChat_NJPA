#car-pop-mask {
	display: block;
	width: 100%;
	height: 100%;
	background: #000;
	z-index: 999999;
	position: absolute;
	position: fixed;
	top: 0;
	left: 0;
}

.car-popup {
	display: block;
	width: 100%;
	padding: 0;
	opacity: 1;
	-webkit-transform: scale(1);
	-webkit-transition: all 0.20s ease-in-out;
	transform: scale(1);
	transition: all 0.20s ease-in-out;
	position: absolute;
	z-index: 1000000;
	/* top: 50%; */
	/* left: 50%; */
	margin: 0px auto;
	background: #eee;
	color: #555;
	box-shadow: 1px 1px 1px #777;
	-webkit-box-shadow: 1px 1px 1px #777;
}
.content-body form{
	width:100%;
	text-align:center;
	border-bottom:1px solid #ddd;
	padding-bottom:10px;
}
.car-popup input[type='text']{
	border-radius: 5px;
	border:1px solid #ddd;
	line-height:40px;
	height:40px;
	width:80%;
    text-indent:10px;
	font-size:16px;
}

.car-popup input[type='password']{
	border-radius: 5px;
	border:1px solid #ddd;
	line-height:30px;
	height:30px;
	width:100%;
	text-indent:10px;
	width:80%;
    text-indent:10px;
	font-size:16px;
}
.car-popup input[type='radio']{
	line-height:30px;
	height:16px;
	width:50%;
	text-indent:10px;
	vertical-align:middle;
}
.car-popup .sexDiv{
	width:20%;
	margin:0 auto;
	display:table;
}
.car-popup b{
	height:30px;
	line-height:30px;
	vertical-align:middle;
}
.car-popup>* {
	color: inherit;
}

.car-popup a {
	text-decoration: none;
}

.car-popup.hidden {
	opacity: 0;
	-webkit-transform: scale(0);
	top: 50%;
	left: 50%;
	margin: 0px auto;
}

.car-popup>header {
	font-size: 12px;
	margin: 0;
	padding: 0;
	background: #eee;
	color: #888;
	height: 30px;
	line-height: 30px;
	text-indent: 10px;
	margin-top:10px;
}

.car-popup>div {
	font-size: 14px;
	padding: 10px 0px;
	line-height: 1.8;
}

.car-popup>footer {
	width: 90%;
	text-align: center;
	display: block !important;
	position:relative;
	margin:0 auto; 
}

.car-popup .car-popup-cancel, .car-popup .car-popup-ok {
	float: left;
	background: #fff;
	color: #555;
	height: 35px;
	line-height: 35px;
	font-size:12px;
	margin-bottom:10px;
}
.car-popup .car-popup-cancel{
	border-top-left-radius:3rem;
	border-bottom-left-radius:3rem;
	border:1px solid #ddd;
	width: 50%;
}
.car-popup .car-popup-ok {
	float: left;
	background: #fff;
	color: #555;	
	border-top-right-radius:3rem;
	border-bottom-right-radius:3rem;
	border-top:1px solid #ddd;
	border-bottom:1px solid #ddd;
	border-right:1px solid #ddd;
	width: 48%;
}

.car-popup a.center {
	float: none !important;
	width: 100%;
	margin: auto;
	display: block;
}


/*分享提示框*/
.sharePop{
    background: #fff;
}

/*alert提示框*/
.alertPop{
    background: #000;
    opacity: .7;
    border-radius: 10px;
    -moz-border-radius: 10px;
    -o-border-radius: 10px;
    -webkit-border-radius: 10px;
    box-shadow: 1px 1px 1px #000;
    -webkit-box-shadow: 1px 1px 1px #000;
    width:auto;
    color:#fff;
}
.alertPop>div{
	padding: 10px 10px;
}