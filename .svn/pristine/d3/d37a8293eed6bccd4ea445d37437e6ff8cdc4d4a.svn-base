// 添加奖项
function addPartner(){
	partnerReset();
	$('#addPartner').dialog('open');
}



// 保存奖项操作
function partnerAdd(){
	var isValid = true;
	$('#addPartner input').each(function(){
		if($(this).attr('required') || $(this).attr('validType')){
			$(this).validatebox('enableValidation');
			if (!$(this).validatebox('isValid')) {
				// 如果验证不通过，则返回false
				isValid = false;
				return;
			}
		}	
	});
	if (!isValid) {
		$.messager.alert('警告', "请输入必输字段！", 'warning');
		return;
	}
	
	$.ajax({
		async : false,
		cache : false,
		type : 'GET',
		dataType : "json",
		data: {
				"userId" : $("#userId").val(),
				"userName" : $("#userName").val(),
				"status" : $("#status").combobox('getValue'),
				"path" : $("#path").val()
		},
		url :'/pawj/lotteryPartner/addLotteryPartner.do',
		success: function(data){
			if(data.smg == true) {
				$('#addPartner').dialog('close');
				$.messager.show({
               	 msg:'保存成功！',
		         timeout:3000,
		         showType:'slide',
                 title: '提示'
                });
				$('#partnerQuery').datagrid('reload');
			} else {
				$.messager.alert('提示', '提交失败！', 'warning');
			}
		}
	});
}

// 添加操作中的重置操作
function partnerReset() {
	$('input.easyui-validatebox').validatebox('disableValidation')
	.focus(function() {
		$(this).validatebox('enableValidation');
	}).blur(function() {
		$(this).validatebox('validate')
	});
	 $("#userId").val('');
	 $("#userName").val('');
	 $('#status').combobox('setValue','-1');
	 $("#path").val('');
}

// 编辑奖项
function upd(index){
	$('#updatePartner').dialog('open');
	$('#partnerQuery').datagrid('selectRow', index);
	var rowDate = $('#partnerQuery').datagrid('getSelected');
	if(rowDate != null) {
		$('#updateUserId').val(rowDate.userId);
		$('#updateUserName').val(rowDate.userName);
		$('#updateStatus').combobox('setValue',rowDate.status);
		$('#updatePath').val(rowDate.path);
	}
}

