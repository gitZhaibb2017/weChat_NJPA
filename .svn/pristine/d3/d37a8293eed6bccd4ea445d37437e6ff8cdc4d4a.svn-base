// 删除
function del(index){
	//alert('1111');
	$('#partnerQuery').datagrid('selectRow', index);
	var rowDate = $('#partnerQuery').datagrid('getSelected');
	$.messager.confirm('删除提示', '你确定永久删除该数据吗?？',
			function(r) {
			if(r){
				$.ajax({
						type : "get",
						cache : false,
						async : false,
						url : "/pawj/lotteryPartner/deleteLotteryPartner.do",
						data : {
							userId:  rowDate.userId 
						},
						dataType : 'json',
						success : function(data) {
							$.messager.show({
		                	msg:'删除成功！',
				            timeout:3000,
				            showType:'slide',
		                    title: '提示'
		                 });
		                 $('#partnerQuery').datagrid('reload');
					},
					error : function(result) {
						$.messager.alert("提示", "数据提交删除失败！");
					}
				})	
			}else{
				$.messager.alert("提示", "取消删除！！");
			}
								
			});
}
