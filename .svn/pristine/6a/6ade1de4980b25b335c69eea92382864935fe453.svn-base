;;/**
 * H5页面校验
 */
var Validator={
		reg:"",
		//字符串校验
		validateStr:function(value){
			this.reg = /^[a-zA-Z0-9|_]{1,15}$/;
			return this.reg.test(value);
		},
		//登陆页手机号校验(满11位即可)
		validateLogTelephone:function(value){
			this.reg = /^[1]{1}[0-9]{10}$/;
			return this.reg.test(value);
		},
		//注册手机号校验(正常校验  全部11位)
		validateRegPhone:function(value){
			this.reg = /^[1]{1}[3|4|5|7|8]{1}[0-9]{9}/;
			return this.reg.test(value);
		},
		//空校验
		validateNull:function(value){
			if(value==null||value==undefined||value==''||value.length==0)
				return true;
			else
				return false;
		},
		//密码校验()
		validatePassword:function(value){
			this.reg =/[a-zA-Z0-9]{6,20}/;
			return this.reg.test(value);
		},
		//再次输入密码校验
		validateRepsword:function(value){
			this.reg =/[a-zA-Z0-9]{6,20}/;
			return this.reg.test(value);
		},
		//验证码校验(6位纯数字)
		validateCode:function(value){
			this.reg = /^[0-9]{6}$/;
			return this.reg.test(value);
		},
		//邮箱校验
		validateEMail:function(value){
			this.reg = /^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(.[a-zA-Z0-9_-])+/;
			return this.reg.test(value);
		}
  }

var CommonTool = {
		/**
		 * @param str 字符串
		 * @param before 前面预留可见字符个数
		 * @param end 后面预留可见字符个数
		 */
		starStr: function(str,before,end){
			var temp = str.substr(0, before);
			var starlength = str.length - end - before;
			for(var i = 0;i<starlength;i++){
				temp +="*";
			}
			temp += str.substr(str.length-end,str.length);
			return temp;
		}
}