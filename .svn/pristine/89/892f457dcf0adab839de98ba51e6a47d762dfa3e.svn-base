//获取余额信息
$(function() {
	getBalance();
});

//获取用户余额
function getBalance() {
	$.ajax({
		type : 'POST',
		url : "/pawj/app/person/queryUserInfo.do",
		dataType : "JSON",
		success : function(data) {
			data = $.parseJSON(data);
			$("#balance").text(data.balance);
		}
	});
}
