@charset "UTF-8";

:focus {
	outline: none;
	cursor: pointer;
}
body,ol,ul,li,p,h1,h2,h3,h4 {
	margin: 0;
	padding: 0;
	font-weight: normal;
}
html,body {
	color: #666;
	font: normal 62.5% Helvetica, Arial, sans-serif, "微软雅黑";
	background-color: #dfe7eb;
	word-break: break-all;
}
img,object {
	border: 0;
	max-width: 100%;
	-ms-interpolation-mode: bicubic;
	cursor: pointer;
}
input {
	outline: none;
}
a,a:hover {
	color: #333;
	text-decoration: none;
	cursor: pointer;
}
b {
	font-weight: normal;
}
i {
	font-style: normal;
}
ol,ul,li {
	list-style: none;
}
header {
	width: 100%;
	height: 4.5rem;
	line-height: 4.5rem;
	color: #fff;
	font-size: 1.8rem;
	background-color: #fe6446;
	text-align: center;
	vertical-align: middle;
	display: inline-block;
    position: relative;
}
header i {
	width: 32px;
    height: 100%;
    background: url(../images/icon_arrow.png) no-repeat center;
	background-size: 80%;
    vertical-align: middle;
    position: absolute;
	left: 1.5%;
}
header b {
	width: 32px;
    height: 100%;
    background: url(../images/icon_ask.png) no-repeat center;
	background-size: 80%;
    vertical-align: middle;
    position: absolute;
	right: 3%;
}
header span {
	width: 70%;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	display: inline-block;
}
.bgWhite {
    background: #fff;
}


/*登录*/
.login img {
	width: 60%;
	margin: 5rem 0; 
}
.loginBg {
	background-color: #fe5040;
}
.login_tips {
	width: 60%;
	color: #fff;
	font-size: 3.2rem;
	background-color: rgba(0,0,0,0.5);
	border-radius: 10px;
	padding: 10px 0;
	line-height: 1.5;
	position: relative;
	top: 50%;
	left: 20%;
	text-align: center;
}
.login {
	color: #fff;
	font: normal 62.5% Helvetica, Arial, sans-serif, "微软雅黑";
	text-align: center;
}
.login input, .login button {
	width: 60%;
	height: 8rem;
	color: #fff;
	font-size: 3.2rem;
	border: 0;
	border: 1px solid #fff;
	border-radius: 4rem;
	background: transparent;
	margin-top: 4rem;
	text-align: center;
}
.login input {
	opacity: 0.8;
}
.login input:focus {
	background-color: rgba(255,255,255,0.2);
}
input::-webkit-input-placeholder {
	color: #fff;
	font-size: 3.2rem;
}
.login button {
	color: #fff;
	background-color: #ffb71d;
	border: 0;
	font-size: 3.2rem;
	margin-bottom: 10rem;
}
.login span {
	width: 75%;
	height: 6rem;
    line-height: 3;
	color: #fff;
	font-size: 2.8rem;
	text-align: right;
	display: inline-block;
	opacity: 0.8;
}
.login span a, .login span a:hover {
	color: #fff;
	margin-left: 1.5rem;
}
.login label {
	width: 75%;
	height: 1rem;
	border-top: 2px solid #fe6e3e;
	text-align: center;
	margin-top: 5rem;
	display: inline-block;
}
.login i {
	width: 20%;
	height: 2rem;
	line-height: 1.5rem;
	color: #ffe7dd;
	font-size: 1.4rem;
	background-color: #fe5040;
	text-align: center;
	display: inline-block;
	position: relative;
	top: -0.8rem;
}
.loginOther {
	text-align: center;
	margin: 1.5rem 0 10rem 0;
}
.loginOther li {
	width: 75%;
	display: inline-block;
}
.loginOther a {
	width: 30%;
	display: inline-block;
}
.loginOther img {
	width: 50%;
	opacity: 0.5;
}
/*登录/*/

/*答题*/
.problemTitle {
	color: #333;
	font-size: 1.4rem;
	background-color: #f5f5f5;
	border-bottom: 1px solid #ddd;
	padding: 1rem;
}
.problemContent {
	padding: 1rem;
}

.problemContent li {
	color: #2e78a7;
	font-size: 1.4rem;
	text-indent: 1rem;
	background-color: #fff;
	padding: 0.6rem 0;
}
.problemContent a {
	color: #2e78a7;
	overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
}
.problemContent td {
	font-size: 2.2rem;
}

