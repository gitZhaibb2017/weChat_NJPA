$(function() {
	getPersonTreasure();
});

var tr= '';

//获取财富榜信息
function getPersonTreasure() {
	tr= '';
	$.ajax({
		type : 'POST',
		url : "/pawj/app/person/queryPersonTreasure.do",
		dataType : "JSON",
		success : function(data) {
			data = $.parseJSON(data);
			var picturePath = data.picturePath;
			var nickname = data.nickname;
			var balance = data.balance;
			var rank = "排名" + data.level;
			tr += '<tr>'+
					'<td>'+
						'<lable style="background: url('+picturePath+') no-repeat center;background-size: 100%;"></lable>'+
						'<div>'+nickname+'</div>'+
					'</td>'+
					'<td><span>'+balance+'</span></td>'+
					'<td><span>'+rank+'</span></td>'+
				 '</tr>';
			queryTreasure();
		}
	});
}

function queryTreasure(){
	$.ajax({
		type : 'POST',
		url : "/pawj/app/person/queryTreasure.do",
		dataType : "JSON",
		success : function(data) {
			data = $.parseJSON(data);
			$.each(data,function(i,item){
				var picturePath = item.picturePath;
				var nickname = item.nickName;
				var balance = item.balance;
				var rank = "排名" + item.level;
				tr += '<tr class="color">'+
				'<td>'+
				'<lable style="background: url('+picturePath+') no-repeat center;background-size: 100%;"></lable>'+
				'<div>'+nickname+'</div>'+
				'</td>'+
				'<td><span>'+balance+'</span></td>'+
				'<td><span>'+rank+'</span></td>'+
				'</tr>';
			});
			$("#treasure").append(tr);
		}
	});
}

function goBack(){
	window.history.back();
};
