(function() {
	
	// 我的调查
	$(function() {
		getRecord();
		
		$(".mysearchContext")
				.on("click",".shareImg",
						function() {
							var shareHtml = "<div class='shareImg'>"
									+ "<img src='../../images/logo_wechat.png' />"
									+ "<img src='../../images/logo_wechatmoments.png' />"
									+ "<img src='../../images/logo_qq.png' />"
									+ "<img src='../../images/logo_sinaweibo.png' />"
									+ "</div>";
							var opt = {
						            id: 'pop-1',
						            noFootButton: true,
						            message: shareHtml,
						            hideTitle: true,
						            marginBottom:0,
						            popClass:'sharePop'
							}
							// 弹出窗
							$('body').popup(opt);
						});
	});

	// 我的调查
	function getRecord() {
		$.ajax({
					type : 'POST',
					url : "/pawj/app/person/queryMySurvey.do",
					contentType : "application/json",
					success : function(data) {
						data = [ {
							NAME : "流行服饰调查",
							COEFFICIENT : "200",
							PLANCOPY : "0000",
							RETURNCOPY : "11",
							reach : "111"
						} ];
						console.log(data);
						if (data.length > 0) {
							var h = "";
							for (var i = 0; i < data.length; i++) {
								h += "<div><h1>" + data[i].NAME + "</h1><b>"
										+ data[i].COEFFICIENT + "</b></div>";
								h += "<div><ul>";
								h += '<li><span >' + data[i].PLANCOPY
										+ '</span><i>发出数</i></li>';
								h += '<li><span >' + data[i].RETURNCOPY
										+ '</span><i>收回数</i></li>';
								h += '<li><span >' + data[i].reach
										+ '</span><i>达成率</i></li>';
								h += '</ul><label><img alt="" src="../../images/icon_share.png" class="shareImg"/></label></div>';
							}
						} else {

						}
						$(".mysearchContext").html(h);

					}
				});
	}
}());
